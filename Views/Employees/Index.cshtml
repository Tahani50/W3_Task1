@model List<Employee>
@{
}

<h1 class="text-center mb-5">Employee List</h1>

<div class="row mb-5">
    <div class="col">
        <a class="btn btn-dark" asp-controller="Employees" asp-action="Create">New Employee</a>
    </div>
    <div class="col">

    </div>
</div>


<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Position</th>
            <th>Salary</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Position</td>
                <td>@employee.Salary</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-dark btn-sm" asp-controller="Employees" asp-action="Edit" 
                    asp-route-id="@employee.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Employees" 
                    asp-action="Delete" asp-route-id="@employee.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
