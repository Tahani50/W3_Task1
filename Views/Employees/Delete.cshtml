@model Employee

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">Delete Employee</h2>
        <h5 class="text-center text-danger">Are you sure you want to delete this employee?</h5>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">ID:</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@Model.Id" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Name:</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@Model.Name" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Position:</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@Model.Position" />
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-3 col-form-label">Salary:</label>
                <div class="col-sm-8">
                    <input class="form-control-plaintext" readonly value="@Model.Salary" />
                </div>
            </div>
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
             <div class="row">
                <div class="offset-sm-3 col-sm-3 d-grid">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
                <div class="col-sm-3 d-grid">
                    <a class="btn btn-outline-dark" asp-controller="Employees" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
